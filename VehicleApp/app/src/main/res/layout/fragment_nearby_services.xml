                android:layout_height="wrap_content"
                android:text="Kovács Bosch Car Service"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/company3location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Csermely köz 10"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company3longlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47.953754037972175, 21.774052615448774"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company3number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3642480203"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/carservice" />

        <!-- Add more companies as needed -->
    </LinearLayout>


</FrameLayout>