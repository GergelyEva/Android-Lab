                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green Car Park Kft."
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/company2location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debreceni út 318-A"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company2longlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47.915041660826624, 21.724360787249484"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company2number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+36 20 943 6460"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Company 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/company3"
