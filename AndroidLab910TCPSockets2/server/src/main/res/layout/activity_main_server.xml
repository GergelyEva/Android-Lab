<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivityServer">

    <TextView
        android:id="@+id/textViewServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Server"
         />

    <TextView
        android:id="@+id/tvServerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server IP" />

    <TextView
        android:id="@+id/tvServerPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server Port:" />

    <TextView
        android:id="@+id/tvServerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No Connection yet" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Server"
        android:onClick="OnClickStartServer"/>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop server"
        android:onClick="OnClickStopServer"/>
</LinearLayout>