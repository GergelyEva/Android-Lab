<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout1to3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="210dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#0B0B0B"
            android:textColorHighlight="@color/white"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:layout_marginEnd="5dp"  />

        <Button
            android:id="@+id/button2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#0B0B0B"
            android:textColorHighlight="@color/white"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:layout_marginEnd="5dp"  />

        <Button
            android:id="@+id/button3"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#0B0B0B"
            android:textColorHighlight="@color/white"
            android:textSize="50sp"
            app:cornerRadius="10dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4to6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1to3">

        <Button
            android:id="@+id/button4"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#0B0B0B"
            android:textColorHighlight="@color/white"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:layout_marginEnd="5dp"  />

        <Button
        android:id="@+id/button5"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:padding="8dp"
        android:text=""
        android:textColor="#0B0B0B"
        android:textColorHighlight="@color/white"
        android:textSize="50sp"
        app:cornerRadius="10dp"
        android:layout_marginEnd="5dp"  />

        <Button
        android:id="@+id/button6"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:padding="8dp"
        android:text=""
        android:textColor="#0B0B0B"
        android:textColorHighlight="@color/white"
        android:textSize="50sp"
        app:cornerRadius="10dp" />
    </LinearLayout>


    <!-- Horizontal LinearLayout for buttons 7 to 9 -->
    <LinearLayout
        android:id="@+id/linearLayout7to9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4to6">

        <Button
            android:id="@+id/button7"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#0B0B0B"
            android:textColorHighlight="@color/white"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#0B0B0B"
            android:textColorHighlight="@color/white"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#0B0B0B"
            android:textColorHighlight="@color/white"
            android:textSize="50sp"
            app:cornerRadius="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/restartbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="113dp"
        android:text="Restart?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/playerO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="75dp"
        android:text="Player O"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="3dp"
        android:text="Player X"
        android:textSize="30sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="56dp"
        android:textSize="30sp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="120dp"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- End of Horizontal LinearLayout for buttons 7 to 9 -->

</androidx.constraintlayout.widget.ConstraintLayout>
